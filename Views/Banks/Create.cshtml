@model TrustCare.Models.Bank

@{
    ViewData["Title"] = "Create";
    Layout = "_UserLayout";

}


<style>



body{
background: linear-gradient(to right, rgba(235,224,232,1) 52%,rgba(254,191,1,1) 53%,rgba(254,191,1,1) 100%);
font-family: 'Roboto', sans-serif;
}

.card{
	border: none;
	max-width: 550px;
	border-radius: 15px;
	margin: 150px 0 150px;
	padding: 35px;
	padding-bottom: 20px!important;
}
.heading{
	color: #C1C1C1;
	font-size: 14px;
	font-weight: 500;
}
img{
	transform: translate(160px,-10px);
}
img:hover{
    cursor: pointer;
}
.text-warning{
	font-size: 12px;
	font-weight: 500;
        color: #3e64d3!important;
    }
#cno{
	transform: translateY(-10px);
}
input{
	border-bottom: 1.5px solid #E8E5D2!important;
	font-weight: bold;
	border-radius: 0;
	border: 0;

}
.form-group input:focus{
	border: 0;
	outline: 0;
}
.col-sm-5{
	padding-left: 90px;
}
.btn{
        background: #3e64d3 !important;
        border: none;
	border-radius: 30px;
}
.btn:focus{
    box-shadow: none;
}
</style>
<div class="container-fluid">
    <div class="row d-flex justify-content-center">
        <div class="col-sm-12">
            <div class="card mx-auto" style="box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;">
                <p class="heading">PAYMENT DETAILS</p>
                <form class="card-details" asp-action="Create" method="post">
                    <div class="form-group mb-0">
                        <label for="CardNumber" class="text-warning mb-0">Card Number</label>
                        <input type="text" name="CardNumber" id="CardNumber" placeholder="1234 5678 9012 3457" size="17" minlength="19" maxlength="19">
                        <img src="https://img.icons8.com/color/48/000000/visa.png" width="64px" height="60px" />
                    </div>

                    <div class="form-group">
                        <label for="Owner" class="text-warning mb-0">Cardholder's Owner</label>
                        <input type="text" name="Owner" id="Owner" placeholder="Owner" size="17">
                    </div>

                    <div class="form-group pt-2">
                        <div class="row d-flex">
                            <div class="col-sm-3">
                                <label for="Cvv" class="text-warning mb-0">Cvv</label>
                                <input type="password" name="Cvv" id="Cvv" placeholder="&#9679;&#9679;&#9679;" size="1" minlength="3" maxlength="3">
                            </div>
                                
                            <div class="col-sm-5 pt-0">
                               <p style="color:red;">@ViewBag.notsubscribed</p>
                                <button type="submit" class="btn btn-primary"><i class="fas fa-arrow-right px-3 py-2"></i></button>
                            </div>
                        </div>                        
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

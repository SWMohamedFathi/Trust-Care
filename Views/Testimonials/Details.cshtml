@model TrustCare.Models.Testimonial

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Testimonial</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TestimonialText)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TestimonialText)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ApprovalStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApprovalStatus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.UserId)
        </dd>
    </dl>
</div>
<div>
    <table class="table">
        <tr>
            <td>@Model.TestimonialText</td>
            <td>@Model.ApprovalStatus</td>
            <td>
                @if (Model.ApprovalStatus == null)
                {
                    <form asp-action="AcceptTestimonial" asp-route-testimonialId="@Model.TestimonialId">
                        <button type="submit" class="btn btn-success">Accept</button>
                    </form>
                    <form asp-action="RejectTestimonial" asp-route-testimonialId="@Model.TestimonialId">
                        <button type="submit" class="btn btn-danger">Reject</button>
                    </form>
                }
            </td>
        </tr>
    </table>
    <a asp-action="Edit" asp-route-id="@Model.TestimonialId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>





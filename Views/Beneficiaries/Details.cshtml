@model TrustCare.Models.Beneficiary

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Beneficiary</h1>

<h4>Beneficiary</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BeneficiaryId" />
            <div class="form-group">
                <label asp-for="Relationship" class="control-label"></label>
                <input asp-for="Relationship" class="form-control" />
                <span asp-validation-for="Relationship" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApprovalStatus" class="control-label"></label>
                <input asp-for="ApprovalStatus" class="form-control" />
                <span asp-validation-for="ApprovalStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Proof_Document" class="control-label"></label>
                <input asp-for="Proof_Document" class="form-control" />
                <span asp-validation-for="Proof_Document" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<table class="table">
    <tr>
        <td>@Model.Relationship</td>
        <td>@Model.ApprovalStatus</td>
        <td>
            @if (Model.ApprovalStatus == null)
            {
                <form asp-action="AcceptBeneficiary" asp-route-beneficiaryId="@Model.BeneficiaryId">
                    <button type="submit" class="btn btn-success">Accept</button>
                </form>
                <form asp-action="RejectBeneficiary" asp-route-beneficiaryId="@Model.BeneficiaryId">
                    <button type="submit" class="btn btn-danger">Reject</button>
                </form>
            }
        </td>
    </tr>
</table>
<div>
    <a asp-action="Index">Back to List</a>
</div>


